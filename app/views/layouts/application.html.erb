<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= stylesheet_link_tag    "application" %>
		<script type="text/javascript" src="/assets/jquery/jquery-1.8.3.js"></script>
		<%= javascript_include_tag "app/application" %>
		<%= csrf_meta_tags %>
		<%= favicon_link_tag 'favicon.ico' %>
		<meta charset="UTF-8">
		<%= yield :head %>
		<script>
		// Facebook
		(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
		// Twitter
		!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}
		(document,"script","twitter-wjs");
		</script>
	</head>
	<body>
		<div class="wrapper">
			<%= render 'layouts/header' %>
			<div class="content">
				<%= yield %>
			</div>
		</div>
		<%= render 'layouts/footer' %>
	</body>
</html>
